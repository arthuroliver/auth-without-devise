<h1>Signup!</h1>

<%= form_for @user, url: '/users' do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Name:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, "Email:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password Confirmation:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <br><%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
<% end %>